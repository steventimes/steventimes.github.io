---
const { items } = Astro.props;
---
<div class="space-y-5">
  {(items as any[]).map((it) => (
    <div class="glass shadow-soft rounded-2xl p-6">
      <div class="flex flex-col md:flex-row md:items-baseline md:justify-between gap-2">
        <div>
          <p class="text-lg font-semibold text-heading">{it.title}</p>
          <p class="text-body">{it.org}</p>
        </div>
        <p class="text-sm text-secondary">{it.time}</p>
      </div>
      <ul class="mt-4 list-disc pl-5 space-y-1 text-heading">
        {it.bullets.map((b: string) => <li>{b}</li>)}
      </ul>
    </div>
  ))}
</div>
